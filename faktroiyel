#include <iostream>
#include <ctime>
#include <stdio.h>
#include<locale.h>
#pragma warning (disable:4996)
using namespace std;

int faktoriyel(int x) {
	int sonuc = 1;
	for (int i = 1; i <= x; i++)
	{
		sonuc *= i ;
	}
	return sonuc;
}
	
int main() {
	int x;
	cout << "faktoriyelini hesaplamak istediiniz sayiyi giriniz: ";
	cin >> x;

	cout << "sonuc: " << faktoriyel(x);

}
